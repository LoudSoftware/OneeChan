{
    "compilerOptions": {
      "module": "commonjs",
      "allowJs": true,
      "esModuleInterop": true,
      "target": "es6",
      "lib": [
        "es6"
      ],
      "declaration": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "rootDir": ".",
      "outDir": "../dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noImplicitAny": false,
      "typeRoots": ["node_modules/@types"]
    },
    "exclude": [
      "node_modules",
      "dist"
    ]
  }